<nav>
    <span class="nav-header"><%- item.name %></span>
</nav>

<aside>
    <ul></ul>
</aside>
<main>

    <table>
        <tbody>
            <tr>
                <td>
                    <label>CURRENT IMAGE</label>
                </td>
                <td>
                    <%- cloud(item.image, { width: 192, height: 144, gravity: "auto", crop: "fill" }) %>
                    <% if (!item.image) {%>
                        <label>NO IMAGE YET</label>
                    <% } %>
                </td>
            </tr>
            <tr>
                <form enctype="multipart/form-data" action="/business/menu/<%- item.id %>/image?_method=PUT" method="POST">
                    <td>
                        <input type="file" name="image">
                    </td>
                    <td>
                        <button type="submit" class="add-image-button">Add Image</button>
                    </td>
                </form>
            </tr>
        </tbody>
    </table>
</main>
